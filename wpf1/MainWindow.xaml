<Window x:Class="wpf1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gird1" RenderTransformOrigin="0.476,0.502" HorizontalAlignment="Right" Width="800">
        
        
       
        <Button x:Name="clickme" Content="Button" HorizontalAlignment="Left" Margin="292,217,0,0" VerticalAlignment="Top" Height="85" Width="125" Cursor="Hand" FontWeight="Bold" FontStyle="Italic" Click="clickme_Click">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InfoColorKey}}"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label x:Name="display_text" Content="Hello world" HorizontalAlignment="Left" Margin="292,98,0,0" VerticalAlignment="Top" Height="57" Width="108"/>
        <Label x:Name="counterlabel" Content="Label" HorizontalAlignment="Left" Margin="375,325,0,0" VerticalAlignment="Top" Height="61" Width="87"/>

    </Grid>
</Window>
